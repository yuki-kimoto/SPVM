  sub matrix_add_float : int () {
    my $mat1 = SPVM::Matrix::Util->mat_newf([(float)1, 2, 3, 4, 5, 6], 2, 3);
    my $mat2 = SPVM::Matrix::Util->mat_newf([(float)11, 12, 13, 14, 15, 16], 2, 3);
    my $mat3 = mat_addf($mat1, $mat2);

    unless ($mat3->values isa float[]) {
      return 0;
    }

    if ($mat3 == $mat1) {
      return 0;
    }

    if ($mat3 == $mat2) {
      return 0;
    }

    unless ($mat3->rows_length == 2 && $mat3->columns_length == 3) {
      return 0;
    }

    unless (equals_farray($mat3->values, [(float)12, 14, 16, 18, 20, 22])) {
      return 0;
    }

    return 1;
  }

