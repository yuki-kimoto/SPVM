  sub add_int_max_plus_one_2s_complement : int () {
    {
      my $int_max_plus_one = 2147483647 + 1;
      
      my $int_min = -2147483648;
      unless ($int_max_plus_one == $int_min) {
        return 0;
      }
    }
    
    return 1;
  }

