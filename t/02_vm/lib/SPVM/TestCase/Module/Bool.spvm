class TestCase::Module::Bool {
  static method basic : int () {
    
    # true
    {
      my $true = Bool->new_true;
      
      # Bool type
      unless ($true isa Bool) {
        return 0;
      }
      
      # Value
      my $true_value = $true->value;
      
      unless ($true_value == 1) {
        return 0;
      }
    }
    
    # ture - bool context
    {
      unless (true) {
        return 0;
      }
    }

    # true - true keyword
    {
      my $true = true;
      
      # Bool type
      unless ($true isa Bool) {
        return 0;
      }
      
      # Value
      my $true_value = $true->value;
      
      unless ($true_value == 1) {
        return 0;
      }
    }

    # false
    {
      my $false = Bool->new_false;
      
      # Bool type
      unless ($false isa Bool) {
        return 0;
      }
      
      # Value
      my $false_value = $false->value;
      
      unless ($false_value == 0) {
        return 0;
      }
    }

    # false - false keyword
    {
      my $false = false;
      
      # Bool type
      unless ($false isa Bool) {
        return 0;
      }
      
      # Value
      my $false_value = $false->value;
      
      unless ($false_value == 0) {
        return 0;
      }
    }

    # false - bool context
    {
      if (false) {
        return 0;
      }
    }
    
    return 1;
  }
}
