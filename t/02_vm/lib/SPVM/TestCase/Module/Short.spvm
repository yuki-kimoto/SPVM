class TestCase::Module::Short {
  use Fn;
  
  static method basic : int () {
    {
      my $numeric_object = Short->new(Fn->INT16_MIN());
      my $value = $numeric_object->value;
      
      unless ($value == Fn->INT16_MIN()) {
        return 0;
      }
    }
    
    {
      my $numeric_object = Short->new(1);
      
      unless ($numeric_object isa Stringable) {
        return 0;
      }
      
      unless ($numeric_object->to_string eq "1") {
        return 0;
      }
    }
    
    return 1;
  }
}
