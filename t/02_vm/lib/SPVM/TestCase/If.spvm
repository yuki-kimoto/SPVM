      my $pass = 0;
      if (1.5) {
        $pass = 1;
      }
      if (0.0) {
        $pass = 0;
      }
      unless ($pass) {
        return 0;
      }
    }

    # Condition - undef
    {
      my $pass = 0;
      if (undef) {
        $pass = 1;
      }
      unless ($pass == 0) {
        return 0;
      }
    }

    # Condition - object
    {
      # Defined object
      {
        my $pass = 0;
        my $point = Point->new;
        if ($point) {
          $pass = 1;
        }
        unless ($pass == 1) {
          return 0;
        }
      }

      # Undefined object
      {
        my $pass = 0;
        my $point : Point = undef;
        if ($point) {
          $pass = 1;
        }
        unless ($pass == 0) {
          return 0;
        }
      }
    }

    # Condition - Bool object
    {
      # Bool->TRUE
      {
        my $pass = 0;
        if (Bool->TRUE) {
          $pass = 1;
        }
        unless ($pass == 1) {
          return 0;
        }
      }
      
      # Bool->FALSE
      {
        my $pass = 0;
        if (Bool->FALSE) {
          $pass = 1;
        }
        unless ($pass == 0) {
          return 0;
        }
      }
      
      # true
      {
        my $pass = 0;
        if (true) {
          $pass = 1;
        }
        unless ($pass == 1) {
          return 0;
        }
      }
      
      # false
      {
        my $pass = 0;
        if (false) {
          $pass = 1;
        }
        unless ($pass == 0) {
          return 0;
        }
      }
    }
    
    return 1;
  }
  
