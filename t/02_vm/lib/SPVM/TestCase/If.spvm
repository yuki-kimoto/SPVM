  static method condition_types : int () {
    
    # Condition - byte
    {
      my $pass = 0;
      if ((byte)1) {
        $pass = 1;
      }
      else {
        $pass = 0;
      }
      
      unless ($pass) {
        return 0;
      }
    }

    # Condition - short
    {
      my $pass = 0;
      if ((short)1) {
        $pass = 1;
      }
      if ((short)0) {
        $pass = 0;
      }
      unless ($pass) {
        return 0;
