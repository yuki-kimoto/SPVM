class Cloner : interface_t {
  
  use Cloneable;
  
  required method : object ($object : object);
  
  static method default_cloner : Cloner () {
    
    my $default_cloner = method : object ($object : Cloneable) {
    
      my $clone = (object)undef;
      
      if ($object) {
        $clone = $object->clone;
      }
      
      return $clone;
    };
    
    return $default_cloner;
  }
  
}
