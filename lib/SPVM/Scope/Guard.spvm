class Scope::Guard {
  
  use Callback;
  
  has callback : ro Callback;
  
  static method new : Scope::Guard ($callback : Callback) {
    
    unless ($callback) {
      die "\$callback must be defined.";
    }
    
    my $self = new Scope::Guard;
    
    $self->{callback} = $callback;
    
    return $self;
  }
  
  method DESTROY : void () {
    $self->{callback}->();
  }
}
